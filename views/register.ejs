<%-include('partials/head') %>

<%- include('partials/header') %>



<main>
    <% if( typeof errors != 'undefined' ) { %>
    <ul>
        <% errors.forEach(error => { %>
        <li> <%= error.msg %> </li>
        <% }) %>
    </ul>
    <% } %>



    <div class="row">
        <section>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 inicio">
                <h2>Registrate</h2>
                <p>¿Ya tíenes cuenta? <a href="/usuarios/login">Click aquí!</a></p>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 registro">
                <form action="" method="POST" id="registro">
                    <h4>Nombre</h4>
                    <center><input class="informacion" placeholder="Ingrese su nombre..." type="text" name="nombre"
                            id="nombre"></center><br>
                    <center><span id="errorNombre" class="text-danger"></span></center><br>
                    <h4>Apellido</h4>
                    <center><input class="informacion" placeholder="Apellido..." type="text" name="apellido"
                            id="apellido"></center><br>
                    <center><span id="errorApellido" class="text-danger"></span></center><br>
                    <h4>Correo electronico</h4>
                    <center><input class="informacion" placeholder="Correo electronico..." type="email" name="email"
                            id="email"></center><br>
                    <center><span id="errorEmail" class="text-danger"></span></center><br>
                    <h4>Contraseña</h4>
                    <center><input class="informacion" placeholder="Contraseña..." type="password" name="password"
                            id="contraseña"></center><br>
                    <center> <span id="errorContraseña" class="text-danger"></span></center><br>
                    <center><input class="informacion2" type="checkbox" name="checkbox" value="" id="checkbox"> <span
                            class="checkbox">Acepto los terminos y condiciones</span></center> <br>
                    <center><span id="errorCheckbox" class="text-danger"></span></center><br>
                    <button class="boton-enviar" type="submit">Contínuar</button>
                    <button class="boton-borrar" type="reset">Cancelar</button>
                </form>
            </div>
        </section>
    </div>
</main>
<%- include('./partials/footer.ejs')  %>
</body>

</html>